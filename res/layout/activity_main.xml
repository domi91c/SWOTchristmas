<GridLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:rowCount="8"
    android:columnCount="8"
    >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:baselineAligned="false"
        android:background="@drawable/grid_paper">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#0C3272"
                    android:id="@+id/linearLayout11"
                    android:dividerPadding="23dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:minHeight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Strengths"
                        android:id="@+id/textView5"
                        android:layout_gravity="left|center_vertical"
                        android:textSize="16dp"
                        android:textColor="#aaaa" />


                </LinearLayout>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView2" >

                    <LinearLayout
                        android:id="@+id/parentViewStrengths"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/btnAddNewItemStrengths"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:onClick="onAddNewClickedStrengths"
                            android:paddingLeft="140dp"
                            android:text="Add New Text"
                            android:src="@drawable/add"
                            android:textColor="@android:color/darker_gray"
                            android:background="@drawable/add_selector"
                            />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#0C3272"
                    android:id="@+id/linearLayout12"
                    android:dividerPadding="23dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:minHeight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Opportunities"
                        android:id="@+id/textView"
                        android:layout_gravity="left|center_vertical"
                        android:textSize="16dp"
                        android:textColor="#aaaa" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView4" >

                    <LinearLayout
                        android:id="@+id/parentViewOpportunities"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/btnAddNewItemOpportunities"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:onClick="onAddNewClickedOpportunities"
                            android:paddingLeft="140dp"
                            android:text="Add New Text"
                            android:src="@drawable/add"
                            android:background="@drawable/add_selector" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="#0C3272"
            android:minWidth="10dp">

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="5">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="5"
                android:id="@+id/linearLayout2">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#34d"
                    android:id="@+id/linearLayout9"
                    android:dividerPadding="23dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:minHeight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Threats"
                        android:id="@+id/textView4"
                        android:layout_gravity="left|center_vertical"
                        android:textSize="16dp"
                        android:textColor="#aaaa" />
                </LinearLayout>


                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView" >

                    <LinearLayout
                            android:id="@+id/parentViewThreats"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            android:orientation="vertical" >

                            <ImageButton
                                android:id="@+id/btnAddNewItemThreats"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:gravity="left"
                                android:onClick="onAddNewClickedThreats"
                                android:paddingLeft="140dp"
                                android:text="Add New Text"
                                android:src="@drawable/add"
                                android:textColor="@android:color/darker_gray"
                                android:background="@drawable/add_selector" />


                        </LinearLayout>
                </ScrollView>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_weight="5"
                android:id="@+id/linearLayout">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#0C3272"
                    android:id="@+id/linearLayout10"
                    android:dividerPadding="23dp"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:minHeight="5dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Weaknesses"
                        android:id="@+id/textView2"
                        android:layout_gravity="left|center_vertical"
                        android:textSize="16dp"
                        android:textColor="#aaaa" />
                </LinearLayout>

                <ScrollView
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:id="@+id/scrollView3" >

                    <LinearLayout
                        android:id="@+id/parentViewWeaknessess"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:orientation="vertical" >

                        <ImageButton
                            android:id="@+id/btnAddNewItemWeaknesses"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="5dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:gravity="left"
                            android:onClick="onAddNewClickedWeaknesses"
                            android:paddingLeft="140dp"
                            android:text="Add New Text"
                            android:src="@drawable/add"
                            android:textColor="@android:color/darker_gray"
                            android:background="@drawable/add_selector" />
                    </LinearLayout>
                </ScrollView>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</GridLayout>